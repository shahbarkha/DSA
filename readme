Algo for finding min in a rotated sorted array
[4, 5, 6, 7, 0, 1, 2]

[]

public int FindMinInASortedArray(int[] arr)
{
    int left = 0, right = arr.Length-1;
    
    while(left < right)
    {
       int mid =  left + (right-left)/2;
       if (arr[mid]  > arr[right])
        left = mid+1;
       else
        right = mid;
     }
    return arr[left];
